<h2>
Zapisatsya
</h2>
<form action="/visit" method="POST" class="form-horizontal">
  <div class="form-group">
    <label>Имя</label>
    <input name="client[name]" type="text" class="form-control bbb" placeholder="Введите имя" value="<%= @booking.nil? ? "" : @booking.name %>">
  </div>
  <div class="form-group">
    <label>Телефон</label>
    <input name="client[phone]" type="text" class="form-control" placeholder="Введите телефон" value="<%= @booking.nil? ? "" : @booking.phone %>">
  </div>
  <div class="form-group">
    <label>Время записи</label>
   
<input name="client[datestamp]" id="aaa" type="text" class="form-control" placeholder="Когда Вас ждать, дата и время" value="<%= @booking.nil? ? "" : @booking.datestamp %>">
  </div>
  <div class="form-group">
		<label>Мастер</label>
	<select name="client[barber]" class="form-control bbb">
		<% @barbers.each do |item| %>
		
			<option <%= @booking != nil && @booking.barber == item.name ? 'selected' : '' %>><%= item.name %></option>
		
	  <% end %>
		</select>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">OK</button>
  </div>

  <div class="form-group">
  <label>Цвет краски:</label>
  <select id="color" name="client[color]">
  <option value="#7bd148">Green</option>
  <option value="#5484ed">Bold blue</option>
  <option value="#a4bdfc">Blue</option>
  <option value="#46d6db">Turquoise</option>
  <option value="#7ae7bf">Light green</option>
  <option value="#51b749">Bold green</option>
  <option value="#fbd75b">Yellow</option>
  <option value="#ffb878">Orange</option>
  <option value="#ff887c">Red</option>
  <option value="#dc2127">Bold red</option>
  <option value="#dbadff">Purple</option>
  <option value="#e1e1e1">Gray</option>
</select>
  </div>
</form>
<script type="text/javascript">
	<!--alert("hello! visit");<= @master == barber[1] ? 'selected' : ''>-->
	$(function(){
	
	$(".bbb").css("background-color","lightyellow");
	$("#color").simplecolorpicker();

	$("#aaa").datetimepicker();
	});
</script>